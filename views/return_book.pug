extends ./layout
block content
    include ./includes/_error
    h1= title
    p
        strong Book Title: #{ loanedBook.Book.title } 
    p
        strong Loaned By: #{ loanedBook.Patron.full_name } 
    p
        strong Loaned On: #{ loanedBook.loaned_on } 
    p
        strong Return By: #{ loanedBook.return_by } 
    form(action="", method="post")
        p
            label(for="returned_on") Returned On
            input(type="text", id="returned_on", name="returned_on", value=`${ today }`)
        p
            input(type="submit", value="Return Book")
