extends ./layout.pug
block content
    h1= title
    p
        strong Book Title: #{ loanedBook.bookTitle } 
    p
        strong Loaned By: #{ loanedBook.patronName } 
    p
        strong Loaned On: #{ loanedBook.loanedOn } 
    p
        strong Return By: #{ loanedBook.returnBy } 
    form(action="", method="post")
        p
            label(for="returned_on") Returned On
            input(type="text", id="returned_on", name="returned_on", value=`${ today }`)
        p
            input(type="submit", value="Return Book")
